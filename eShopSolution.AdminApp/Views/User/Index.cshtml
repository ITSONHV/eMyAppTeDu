@using eShopSolution.ViewModels.Common
@model PageResult<eShopSolution.ViewModels.System.Users.UserViewModels>
@{
    ViewData["Title"] = "Danh sách người sử dụng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb my-breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User">Người sử dụng</a></li>
        <li class="breadcrumb-item active" aria-current="page">Danh sách người sử dụng</li>
    </ol>
</nav>
<a class="btn btn-success btn-style mt-4" asp-action="Create" asp-controller="User"><i class="fa fa-user-plus" aria-hidden="true"></i> Tạo mới tài khoản</a>
<hr />
<!-- //pricing version 2 -->
<!-- //pricing -->
<div class="pricing-version-2">
    <div class="card card_border mb-5">
        <div class="cards__heading">
            <h3>Danh sách người sử dụng<span></span></h3>
        </div>
        <div class="card-body">
            <div class="row px-2">
                <!-- Table #1  -->
                @foreach (var item in Model.Items)
                {
                    <div class="col-lg-4 col-md-6 px-2 mb-4">
                        <div class="card text-center card__hover">
                            <div class="card-header">
                                <h3 class="display-4"><span class="currency"></span><span class="period"></span></h3>
                            </div>
                            <div class="card-block">
                                <h4 class="card-title">
                                    Tài khoản: @Html.DisplayFor(modelItem => item.UserName)
                                </h4>
                                <ul class="list-group">
                                    <li class="list-group-item">Họ: @Html.DisplayFor(modelItem => item.LastName)</li>
                                    <li class="list-group-item">Tên: @Html.DisplayFor(modelItem => item.FirstName)</li>
                                    <li class="list-group-item">Điện thoại: @Html.DisplayFor(modelItem => item.PhoneNumber)</li>
                                    <li class="list-group-item">Email: @Html.DisplayFor(modelItem => item.Email)</li>
                                    <li class="list-group-item">@Html.HiddenFor(modelItem => item.Id)</li>
                                </ul>
                                @*@Html.ActionLink("Sửa", "Edit", "User", new { id = item.Id }, new { @class = "btn btn-style btn-primary mt-4" })*@
                                <a href="@Url.Action("Edit","User",new {id = item.Id})" class="btn btn-style btn-primary mt-4"><i class="fa fa-pencil" aria-hidden="true"></i> Sửa</a>
                                <a href="@Url.Action("Details","User",new { id=item.Id})" class="btn btn-style btn-primary mt-4"><i class="fa fa-info-circle" aria-hidden="true"></i> Chi tiết</a>
                                <a href="#" data-target="#exampleModalCenter" data-toggle="modal" class="btn btn-style btn-danger mt-4"><i class="fa fa-trash-o" aria-hidden="true"></i> Xóa</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="color:orange" id="exampleModalLongTitle"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Thông báo !</h5>
                <button type="button" style="color:red" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="color:red">
                <i class="fa fa-info-circle" aria-hidden="true"></i>  Chức năng hiện tại chưa có !
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-window-close" aria-hidden="true"></i> Đóng</button>
                @*<button type="button" class="btn btn-success">Save changes</button>*@
            </div>
        </div>
    </div>
</div>
